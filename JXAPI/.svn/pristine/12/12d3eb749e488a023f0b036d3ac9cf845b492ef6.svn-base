using JXAPI.Component.IBLL;
using JXAPI.Component.Model;
using JXAPI.Component.SQLServerDAL;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace JXAPI.Component.BLL
{
    public class OrdersBLL  : IOrdersRelatedBLL
    {
        #region 变量

        private static readonly MySqlOrderDAL dal = new MySqlOrderDAL();

        #endregion

        private OrdersBLL() { }

        public static OrdersBLL Instance
        {
            get
            {
                return new OrdersBLL();
            }
        }

        #region CURD

        public System.Data.DataTable GetAddList(int ID, string updateTime,int start, int pageSize, string tableName)
        {
            return dal.GetAddList(ID, updateTime,start,pageSize,tableName);
        }

        public System.Data.DataTable GetUpdateList(int ID, string updateTime, int start, int pageSize, string tableName)
        {
            return dal.GetUpdateList(ID,updateTime,start, pageSize, tableName);
        }

        #endregion
    }
}
